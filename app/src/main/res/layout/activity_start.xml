<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nikolay.sms_10.Start">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout11"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Працівники"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginTop="0dp"
            android:textStyle="bold"
            android:alpha="0.5" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout11"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout12"
        android:layout_marginTop="15dp"
        android:background="#c5c5c5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Сантехнік"
            android:id="@+id/textView4"
            android:textStyle="bold|italic"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/num1"
            android:text="+380974421230"
            android:maxLength="13"
            android:textSize="30dp"
            android:layout_marginLeft="0dp"
            android:layout_gravity="center_horizontal"
            android:autoText="false"
            android:elegantTextHeight="false"
            android:phoneNumber="false"
            android:linksClickable="false"
            android:password="false"
            android:selectAllOnFocus="false" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout13"
        android:background="#c5c5c5"
        android:layout_below="@+id/linearLayout12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Електрик"
            android:id="@+id/textView5"
            android:textStyle="bold|italic"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/num2"
            android:layout_gravity="center_horizontal"
            android:text="+380671305109"
            android:maxLength="13"
            android:textSize="30dp"
            android:layout_marginLeft="0dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout14"
        android:background="#c5c5c5"
        android:layout_below="@+id/linearLayout13"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Столяр"
            android:id="@+id/textView6"
            android:textStyle="bold|italic"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/num3"
            android:layout_gravity="center_horizontal"
            android:text="+380970069580"
            android:maxLength="13"
            android:textSize="30dp"
            android:layout_marginLeft="0dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout15"
        android:background="#c5c5c5"
        android:layout_below="@+id/linearLayout14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Інженер зв&quot;язку"
            android:id="@+id/textView7"
            android:textStyle="bold|italic"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/num4"
            android:layout_gravity="center_horizontal"
            android:text="+380985129600"
            android:maxLength="13"
            android:textSize="30dp"
            android:layout_marginLeft="0dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout17"
        android:background="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout15"
        android:weightSum="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Далі  >>"
            android:id="@+id/button2"
            android:textSize="25dp"
            android:alpha="1"
            android:background="#ff0000"
            android:textColor="#ffffff"
            android:onClick="sendData"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_weight="1.35" />
    </LinearLayout>

</RelativeLayout>
